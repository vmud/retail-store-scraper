{
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(pip install:*)",
      "Bash(pytest:*)",
      "Bash(pylint:*)",
      "Bash(pre-commit:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(claude mcp:*)",
      "Bash(source venv/bin/activate)",
      "Bash(bash:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(cat:*)",
      "Bash(wc:*)",
      "Bash(cut:*)",
      "Bash(du:*)",
      "Bash(tar:*)",
      "Bash(tee:*)",
      "Bash(column:*)",
      "Bash(xargs:*)",
      "Bash(tree:*)",
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(lsof:*)",
      "Bash(kill:*)",
      "Bash(pkill:*)",
      "Bash(unset:*)",
      "Bash(open:*)",
      "Bash(aichat:*)",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:stores.telus.com)",
      "Skill(frontend-design)",
      "Skill(commit-commands:commit)",
      "mcp__plugin_playwright_playwright__browser_navigate",
      "mcp__plugin_playwright_playwright__browser_install",
      "mcp__plugin_github_github__pull_request_read",
      "mcp__plugin_github_github__list_pull_requests",
      "mcp__kapture__list_tabs",
      "mcp__kapture__navigate",
      "mcp__kapture__show",
      "mcp__kapture__screenshot",
      "mcp__kapture__keypress",
      "mcp__kapture__click",
      "mcp__kapture__reload",
      "mcp__kapture__new_tab",
      "mcp__kapture__elements",
      "mcp__kapture__console_logs",
      "mcp__kapture__dom",
      "mcp__kapture__close"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/block-sensitive-files.sh",
            "statusMessage": "Checking file permissions..."
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/check-docs-staleness.sh",
            "statusMessage": "Checking docs staleness..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/format-on-edit.sh",
            "statusMessage": "Auto-formatting...",
            "async": true
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/type-check.sh",
            "statusMessage": "Type checking...",
            "async": true
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/run-tests-on-edit.sh",
            "statusMessage": "Running tests...",
            "async": true
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/validate-scraper-schema.sh",
            "statusMessage": "Validating scraper schema...",
            "async": true
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/lint-on-edit.sh",
            "statusMessage": "Running lint check...",
            "async": true
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/validate-yaml.sh",
            "statusMessage": "Validating YAML syntax...",
            "async": true
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/remind-docs-on-new-file.sh",
            "statusMessage": "Checking if docs need updating..."
          }
        ]
      }
    ]
  }
}
